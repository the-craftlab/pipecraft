{
  "ciProvider": "github",
  "mergeStrategy": "fast-forward",
  "requireConventionalCommits": true,
  "initialBranch": "develop",
  "finalBranch": "main",
  "branchFlow": ["develop", "main"],
  "semver": {
    "bumpRules": {
      "feat": "minor",
      "fix": "patch",
      "breaking": "major",
      "chore": "patch",
      "docs": "ignore"
    }
  },
  "domains": {
    "app": {
      "paths": ["src/**", "tests/**", "package.json"],
      "description": "Application source code"
    }
  }
}
