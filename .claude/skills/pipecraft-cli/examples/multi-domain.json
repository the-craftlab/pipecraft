{
  "ciProvider": "github",
  "mergeStrategy": "fast-forward",
  "requireConventionalCommits": true,
  "initialBranch": "develop",
  "finalBranch": "main",
  "branchFlow": ["develop", "staging", "main"],
  "autoPromote": {
    "staging": true,
    "main": false
  },
  "semver": {
    "bumpRules": {
      "feat": "minor",
      "fix": "patch",
      "breaking": "major",
      "chore": "patch",
      "docs": "ignore",
      "test": "ignore"
    }
  },
  "domains": {
    "api": {
      "paths": [
        "packages/api/**",
        "libs/api-core/**",
        "libs/shared/**"
      ],
      "description": "Backend API service",
      "prefixes": ["test", "deploy"]
    },
    "web": {
      "paths": [
        "packages/web/**",
        "libs/ui-components/**",
        "libs/shared/**"
      ],
      "description": "Frontend web application",
      "prefixes": ["test", "deploy"]
    },
    "infrastructure": {
      "paths": [
        "infrastructure/**",
        "terraform/**"
      ],
      "description": "Infrastructure as code",
      "prefixes": ["deploy"]
    }
  }
}
