{
  "$schema": "../../../.pipecraft-schema.json",
  "ciProvider": "github",
  "mergeStrategy": "fast-forward",
  "requireConventionalCommits": true,
  "initialBranch": "develop",
  "finalBranch": "main",
  "branchFlow": ["develop", "staging", "main"],
  "autoPromote": {
    "staging": true,
    "main": false
  },
  "domains": {
    "api": {
      "paths": ["apps/api/**"],
      "description": "API service"
    }
  }
}
